# GCP Development Environment Configuration
# Copy this to .env when using GCP stack

# GCP Storage Configuration
STORAGE_TYPE=gcp
GCP_PROJECT_ID=codepush-local-dev
GCS_BUCKET_NAME=codepush-local-bucket
STORAGE_EMULATOR_HOST=http://localhost:4443

# Database Configuration (shared)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=codepushdb
DB_USER=root
DB_PASS=root

# Redis Configuration (shared)
REDIS_HOST=localhost
REDIS_PORT=6379

# Application Configuration
NODE_ENV=development
PORT=3000

# Debug Configuration
DEBUG_DISABLE_AUTH=false
DEBUG_USER_ID=

# Terms and Login Configuration
CURRENT_TERMS_VERSION=v1.0
LOGIN_AUTHORIZED_DOMAINS=dream11.com,example.com

# Disable authentication for local emulator
GOOGLE_APPLICATION_CREDENTIALS=
GCLOUD_PROJECT=codepush-local-dev
